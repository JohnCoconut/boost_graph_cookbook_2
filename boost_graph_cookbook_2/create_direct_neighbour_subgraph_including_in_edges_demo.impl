#include <boost/test/unit_test.hpp>
#include "create_direct_neighbour_subgraph_including_in_edges.h"
#include "create_k2_graph.h"

BOOST_AUTO_TEST_CASE(test_create_direct_neighbour_subgraph_including_in_edges)
{
  const auto g = create_k2_graph();
  const auto vip = vertices(g);
  const auto j = vip.second;
  for (auto i=vip.first; i!=j; ++i) {
    const auto h = create_direct_neighbour_subgraph_including_in_edges(
      *i,g
    );
    BOOST_CHECK(boost::num_vertices(h) == 2);
    BOOST_CHECK(boost::num_edges(h) == 1);
  }
}
